<h1>Characters#new</h1>
<p>Find me in app/views/characters/new.html.erb</p>

<%= form_for :character, url: characters_path do |f| %>
<strong>nickname</strong><br>
<%= f.text_field :nickname %><br>
<strong>choose class</strong><br>
<%= f.radio_button :character_class, 'Warrior' %> Warrior<br />
<%= f.radio_button :character_class, 'Rogue' %> Rogue<br />
<%= f.radio_button :character_class, 'Mage' %> Mage<br />
<%= f.submit "Create" %>
<% end %>
